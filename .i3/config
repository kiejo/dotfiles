bindsym $mod+0 workspace 10:music

# move focused container to workspace
bindsym $mod+Shift+1 move container to workspace 1:web
bindsym $mod+Shift+2 move container to workspace 2:dev
bindsym $mod+Shift+3 move container to workspace 3:console
bindsym $mod+Shift+4 move container to workspace 4:research
