exec --no-startup-id exec feh --bg-fill ~/.wallpaper/nuclino_wallpaper_01.png

#set double tap as middle click
exec --no-startup-id synclient TapButton2=2

#set mouse speed
exec --no-startup-id xset m 12 3

# --autostart end--

# start programs
#bindsym $mod+d exec j4-dmenu-desktop
bindsym $sup+space exec "rofi -combi-modi window,drun,run -show combi"
bindsym $sup+w exec sensible-browser
bindsym $sup+e exec nautilus


# --power--

# sleep 1 adds a small delay to prevent possible race conditions with suspend
set $Locker i3lock && sleep 1
set $hibernate systemctl hibernate -i
set $suspend systemctl suspend -i
set $restart systemctl reboot -i
set $shutdown systemctl halt -i

set $mode_system System (l) lock, (e) logout, (s) suspend, (h) hibernate, (r) reboot, (Shift+s) shutdown
mode "$mode_system" {
    bindsym l exec --no-startup-id $Locker, mode "default"
    bindsym e exec --no-startup-id i3-msg exit, mode "default"
    bindsym s exec --no-startup-id $Locker && $suspend, mode "default"
    bindsym h exec --no-startup-id $Locker && $hibernate, mode "default"
    bindsym r exec --no-startup-id $restart, mode "default"
    bindsym Shift+s exec --no-startup-id $shutdown, mode "default"

    # back to normal: Enter or Escape
    bindsym Return mode "default"
    bindsym Escape mode "default"
}

bindsym $mod+Pause mode "$mode_system"

# direct shortcuts
bindsym $mod+Shift+s exec $Locker && $suspend

# --power end--


# controls for Spotify
bindsym XF86AudioPlay exec dbus-send --print-reply --dest=org.mpris.MediaPlayer2.spotify /org/mpris/MediaPlayer2 org.mpris.MediaPlayer2.Player.PlayPause
bindsym XF86AudioStop exec dbus-send --print-reply --dest=org.mpris.MediaPlayer2.spotify /org/mpris/MediaPlayer2 org.mpris.MediaPlayer2.Player.Stop
bindsym XF86AudioPrev exec dbus-send --print-reply --dest=org.mpris.MediaPlayer2.spotify /org/mpris/MediaPlayer2 org.mpris.MediaPlayer2.Player.Previous
bindsym XF86AudioNext exec dbus-send --print-reply --dest=org.mpris.MediaPlayer2.spotify /org/mpris/MediaPlayer2 org.mpris.MediaPlayer2.Player.Next
#normal keyboard
bindsym $sup+Ctrl+space exec dbus-send --print-reply --dest=org.mpris.MediaPlayer2.spotify /org/mpris/MediaPlayer2 org.mpris.MediaPlayer2.Player.PlayPause
bindsym $sup+Ctrl+Left exec dbus-send --print-reply --dest=org.mpris.MediaPlayer2.spotify /org/mpris/MediaPlayer2 org.mpris.MediaPlayer2.Player.Previous
bindsym $sup+Ctrl+Right exec dbus-send --print-reply --dest=org.mpris.MediaPlayer2.spotify /org/mpris/MediaPlayer2 org.mpris.MediaPlayer2.Player.Next
bindsym $sup+Ctrl+l exec dbus-send --print-reply --dest=org.mpris.MediaPlayer2.spotify /org/mpris/MediaPlayer2 org.mpris.MediaPlayer2.Player.Next
bindsym $sup+Ctrl+h exec dbus-send --print-reply --dest=org.mpris.MediaPlayer2.spotify /org/mpris/MediaPlayer2 org.mpris.MediaPlayer2.Player.Previous

# control Volume with Volume Keys
bindsym XF86AudioRaiseVolume exec amixer -D pulse sset Master 5%+
bindsym XF86AudioLowerVolume exec amixer -D pulse sset Master 5%-
bindsym XF86AudioMute exec amixer -D pulse set Master 1+ toggle

#normal keyboard
bindsym $sup+Ctrl+k exec amixer -D pulse sset Master 5%+
bindsym $sup+Ctrl+j exec amixer -D pulse sset Master 5%-
bindsym $sup+Ctrl+m exec amixer -D pulse set Master 1+ toggle
